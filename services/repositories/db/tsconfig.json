{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "models/**/*",
    "queries/**/*",
    "prisma/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "generated"
  ]
}
