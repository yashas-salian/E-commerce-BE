{
  "name": "@yashas40/db",
  "version": "2.3.5",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./generated/prisma/client.js",
      "types": "./generated/prisma/index.d.ts"
    }
  },
  "files": [
    "dist/**/*", 
    "generated/**/*",
    "prisma/**/*"
  ],
  "scripts": {
    "build": "npx tsc --b",
    "db:generate": "npx prisma generate",
    "postinstall": "npx prisma generate",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "dotenv": "^17.2.3",
    "zod": "^3.x.x"
  },
  "peerDependencies": {
    "@prisma/client": "^7.1.0",
    "pg": "^8.x.x"
  },
  "devDependencies": {
    "@prisma/client": "^7.1.0",
    "@types/node": "^20.x.x",
    "@types/pg": "^8.x.x",
    "pg": "^8.x.x",
    "prisma": "^7.1.0",
    "typescript": "^5.3.0"
  }
}